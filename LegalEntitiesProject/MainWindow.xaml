<Window x:Class="SpellChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpellChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid Margin="0,0,2,0">
        <Label Content="Исходные данные (текст === словарь):" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <RichTextBox Name="rtbOriginalText" HorizontalAlignment="Left" Height="100" Margin="20,51,0,0" VerticalAlignment="Top" Width="400"></RichTextBox>
        <Label Content="Результат проверки орфографии:" HorizontalAlignment="Left" Margin="20,170,0,0" VerticalAlignment="Top"/>
        <RichTextBox Name="rtbCorrectedText" HorizontalAlignment="Left" Height="100" Margin="20,201,0,0" VerticalAlignment="Top" Width="400"></RichTextBox>
        <Button Name="btnCheck" Content="Проверить" HorizontalAlignment="Left" Margin="182,375,0,0" VerticalAlignment="Top" Width="75" Click="BtnCheck_Click"/>
    </Grid>
</Window>
